@model IEnumerable<EmpyreBookApp.ViewModels.UserSchoolGroup>

@{
    ViewBag.Title = "User Body Statistics";
}

<h2>User Body Statistics</h2>

<table style="text-align:center">
    <tr>
        <th style="text-align:center">
            School
        </th>
        <th style="text-align:center">
            Users
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FromSchool)
            </td>
            <td>
                
                @item.StudentCount
            </td>
        </tr>
    }
</table>