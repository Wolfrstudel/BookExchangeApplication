@model IEnumerable<EmpyreBookApp.Models.Book>
    @{
        ViewBag.Title = "Browse";
    }
    <div id="title">
            <h1 style="color:white; text-align:center; padding-top:15px; padding-bottom:15px;">Welcome To The Empyre Exchange</h1>
    </div>
    <div style="height:30px"></div>
    <div style="width: 100px; float: left;">
        <form method="link" action="Create">
            <input type="submit" value="Post A Book" style="box-shadow: 5px 5px 5px #651212;" />
        </form>
    </div>

    <div style="margin-left:120px;">
        @using (Html.BeginForm()) 
        { 
            <input type="submit" value="Search" style="box-shadow: 5px 5px 5px #651212;" />
            @Html.TextBox("SearchString", null, new { @style = "box-shadow: 5px 5px 5px #651212;" })
        }
    </div>
       

   


    <html>
    <head>
        <style type='text/css'>
            html, body {
                height: 100%;
                margin: 0;
            }

            #title {
                background-color: @Html.Action("GetSecond", "User");
                
                box-shadow: 5px 5px 5px #651212;
                text-shadow: 3px 3px 3px #651212;
                margin: 0 auto;
                width: 90%;
                height: 10%;
                border-radius: 10px;
                vertical-align: middle;
            }

            #content {
                width: 100%;
                height: 100%;
            }

            #left {
                width: 100px;
                height: 100%;
                float: left;
                border-radius: 10px;
                box-shadow: 5px 5px 5px #651212;
                background-color: @Html.Action("GetSecond", "User");
            }

            #right {
                margin-left: 120px;
                height: 100%;
                border-radius: 10px;
                box-shadow: 5px 5px 5px #651212;
                background-color: @Html.Action("GetSecond", "User");
            }

            #links {
                color: #ffffff;
                width: 100px;
                font-weight: bold;
                background-color: #fe1a00;
                border-color: #f62b2b;
                background-color:@Html.Action("GetSecond", "User");
                background-image: -webkit-gradient(linear, left top, left bottom, from(#f62b2b), to(#d20202));
                background-image: -webkit-linear-gradient(top, #f62b2b, #d20202);
                background-image: -moz-linear-gradient(top, #f62b2b, #d20202);
                background-image: -ms-linear-gradient(top, #f62b2b, #d20202);
                background-image: -o-linear-gradient(top, #f62b2b, #d20202);
                background-image: linear-gradient(to bottom, #f62b2b, #d20202);
                filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#f62b2b, endColorstr=#d20202);
            }

                #links:hover {
                    border: 1px solid #b30808;
                    background-color:  #e40a0a;
                    background-image: -webkit-gradient(linear, left top, left bottom, from(#e40a0a), to(#9f0202));
                    background-image: -webkit-linear-gradient(top, #e40a0a, #9f0202);
                    background-image: -moz-linear-gradient(top, #e40a0a, #9f0202);
                    background-image: -ms-linear-gradient(top, #e40a0a, #9f0202);
                    background-image: -o-linear-gradient(top, #e40a0a, #9f0202);
                    background-image: linear-gradient(to bottom, #e40a0a, #9f0202);
                    filter: progid:DXImageTransform.Microsoft.gradient(GradientType=0,startColorstr=#e40a0a, endColorstr=#9f0202);
                }

            #space {
                height: 10px;
            }

            #container {
                height: 100%;
                width: 95%;
                background-color: #ffffff;
                margin-left: 2.5%;
            }
        </style>
    </head>
    <body>

        <div id='content' style="margin-top:10px;">
            <div id='left'>
                <div id="space"></div>
                @foreach (string item in ViewBag.Genres)
{
    using (@Html.BeginForm(new { genre = @item }))
    {
        <button id="links"> @item </button>
    }

}
                <div id="space"></div>
            </div>
            <div id='right' style="min-width:350px;">
                <div id="space"></div>
                @foreach (var item in Model)
                {
                    <div id='container'>   
                        <table class="table">
                            <tr>
                                <td>
                                    <img src="@Url.Content(item.BI.CoverLink)" alt="Image" style="background-color: #000; height:200px; width: 200px;"/>
                       
                                </td>
                                <td style="width:80%;">
                                    <div style="vertical-align:middle; margin: 0 auto;">
                                        @Html.ActionLink(item.BI.Title, "SpecifiedBook", new { id = item.BookID })
                                    </div>

                                </td> 
                            </tr>
                        </table>
                    </div>

                }
                <div id="space"></div>
            </div>
        </div>
    </body>
</html>

